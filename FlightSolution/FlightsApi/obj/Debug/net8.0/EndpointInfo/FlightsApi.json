  "components": {
    "schemas": {
      "CreateFlightRequestDto": {
        "type": "object",
        "properties": {
          "flightNumber": {
            "type": "string",
            "nullable": true
          },
          "destination": {
            "type": "string",
            "nullable": true
          },
          "departure": {
            "type": "string",
            "nullable": true
          },
          "departureTime": {
            "type": "string",
            "format": "date-time"
          },
          "arrivalTime": {
            "type": "string",
            "format": "date-time"
          },
          "gate": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateUserRequestDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "FlightEntity": {
        "required": [
          "arrivalTime",
          "departure",
          "departureTime",
          "destination",
          "flightNumber",
          "status"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "flightNumber": {
            "minLength": 1,
            "type": "string"
          },
          "departure": {
            "minLength": 1,
            "type": "string"
          },
          "destination": {
            "minLength": 1,
            "type": "string"
          },
          "departureTime": {
            "type": "string",
            "format": "date-time"
          },
          "arrivalTime": {
            "type": "string",
            "format": "date-time"
          },
          "gate": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "$ref": "#/components/schemas/FlightStatus"
          },
          "userFlights": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserFlight"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "FlightStatus": {
        "enum": [
          "Scheduled",
          "Boarding",
          "Departed",
          "Landed"
        ],
        "type": "string"
      },
      "UserFlight": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "userLogInId": {
            "type": "integer",
            "format": "int32"
          },
          "flightEntityId": {
            "type": "integer",
            "format": "int32"
          },
          "userLogIn": {
            "$ref": "#/components/schemas/UserLogIn"
          },
          "flightEntity": {
            "$ref": "#/components/schemas/FlightEntity"
          },
          "bookingDate": {
            "type": "string",
            "format": "date-time"
          },
          "seatNumber": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserLogIn": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "username": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "userFlights": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UserFlight"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
