{
  "AppSetting": {
    "Jwt": {
      "SecretKey": "dfdsfsdfdsfsdhfudshfhsffdgfdknffndsjfnsdjfnsdjfnsdj",
      "Issuer": "http://localhost:5202",
      "Audience": "http://localhost:5202",
      "ExpireMinute": 10
    },
    "ConnectionStrings": {
      "Flights": "Data Source=Flights.db"
    },


    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": {
        "Default": "Error",
        "Override": {
          "Microsoft": "Warning",
          "System": "Warning"
        }
      },
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": {
            "path": "Logs/log-.txt",
            "rollingInterval": "Day",
            "restrictedToMinimumLevel": "Error"
          }
        }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
      "Properties": {
        "Application": "RestApi"
      }
    },

    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "AllowedHosts": "*"

  }
}
